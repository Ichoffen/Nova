{
  "name": "nova-claude-client",
  "version": "0.1.0",
  "description": "Desktop Claude client (Nova) with ChatGPT-like UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.nova.claudeclient",
    "productName": "Nova Claude Client",
    "files": [
      "**/*",
      "!dist",
      "!node_modules"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
